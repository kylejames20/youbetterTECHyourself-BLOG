<div id="title-container" class="pb-4">
    <div class="d-inline">
        <div class="w-25 py-1 px-0 mb-3 mx-5" id="h1container">
            <h1 class="text-center">Dashboard</h1>
        </div>
    </div>
</div>
<main class="the-content-area pt-4">
    <div class="new-custom-card mx-5">
        <div class="new-custom-card-header d-block p-2">
            <h4 class="card-title ">Create a Post</h4>
            <div style="clear: both;"></div>
        </div>
        <div class="custom-card-body d-block">
            <div class="form-container ">
                <form>
                    <div class="form-group d-block my-1 mx-2">
                        <label for="title">Title</label>
                        <textarea class="form-control" id="title" rows="1"></textarea>
                    </div>
                    <div class="form-group my-1 mx-2">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="content" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn my-1 mx-2" id="new-post-button">Submit</button>
                </form>
            </div>
        </div>
    </div>
</main>